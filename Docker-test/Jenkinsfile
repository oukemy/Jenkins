pipeline {
    agent any

    stages {
        stage('Docker build') {
            steps {
                script {
                    sh "docker build -f Docker-test/Dockerfile -t oukemyjp/jenkinsbuildtest:1.0.0-${BUILD_ID} Docker-test"
                }
            }
        }
        stage('Docker push') {
            steps {
                scripts {
                    sh "docker push oukemyjp/jenkinsbuildtest:1.0.0-${BUILD_ID}"
                }
            }
        }
    }
}